.container
	.row
		.col-sm-12.col-md-12.col-lg-12
			ul.breadcrumb
				li
					a(href="/") Home
				li
					a(href="/settings") Settings
				li
					a(href="/settings/users") Users
				li.active Change Password
			.page-header
				h1.center Change Password For&nbsp;
					span.italic {{ User.name }}
			.col-md-1.col-lg-3
			.col-sm-12.col-md-10.col-lg-6
				form(name="passwordForm", ng-submit="passwordForm.$valid && submit()", novalidate)
					.form-group.required(ng-class="{ 'has-error': (passwordForm.password.$touched || passwordForm.$submitted) && passwordForm.password.$invalid }")
						label.control-label(for="password") Password
						input#password.form-control(placeholder="Your Password", type="{{ passwordType }}", name="password", ng-model="User.password", required)
						a(ng-click="showHidePassword()") {{ showHidePasswordText }}
					.form-group.required(ng-class="{ 'has-error': (passwordForm.repeatPassword.$touched || passwordForm.$submitted) && passwordForm.repeatPassword.$invalid }")
						label.control-label(for="repeatPassword") Repeat Password
						input#repeatPassword.form-control(match="User.password", placeholder="Repeat Password", type="{{ repeatPasswordType }}", name="repeatPassword", ng-model="User.repeatPassword", required)
						a(ng-click="showHideRepeatPassword()") {{ showHideRepeatPasswordText }}
					.form-group.btn-toolbar
						button.btn.btn-primary(type="submit") Submit
						a.btn.btn-default(href="/settings/users") Cancel
			.col-md-1.col-lg-3