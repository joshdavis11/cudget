.container
	.row
		.col-xs-12.col-sm-12.col-md-12.col-lg-12
			ul.breadcrumb
				li
					a(href="/home") Home
				li.active Settings
			.page-header
				h1.center Settings
			.col-xs-12.col-sm-6.col-md-4.col-lg-3(ng-if="perms.admin")
				.panel.panel-primary
					.panel-heading
						h3.panel-title User Management
					.panel-body
						ul.nav.nav-pills.nav-stacked
							li
								a(href="/settings/users") User Management Home
							li
								a(href="/settings/users/create") + Create A New User
			.col-xs-12.col-sm-6.col-md-4.col-lg-3(ng-if="perms.admin || perms.colorScheme")
				.panel.panel-primary
					.panel-heading
						h3.panel-title Color Scheme
					.panel-body
						ul.nav.nav-pills.nav-stacked
							li
								a(href="/settings/colors") Choose A Color Scheme
